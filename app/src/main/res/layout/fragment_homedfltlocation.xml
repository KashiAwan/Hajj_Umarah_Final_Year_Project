<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homedfltlocation">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/addlocsearch"
            android:layout_width="281dp"
            android:layout_height="60dp"
            android:hint="Search Location" />

        <Button
            android:id="@+id/searchbton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="GO" />

    </LinearLayout>


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        mapbox:mapbox_cameraZoom="13">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatinbtnnavigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:focusable="true"
            mapbox:backgroundTint="#FC9E0606"
            mapbox:srcCompat="@drawable/ic_navigation_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Savegroupdfltfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:focusable="true"
            mapbox:backgroundTint="#FC9E0606"
            mapbox:srcCompat="@drawable/ic_save_black_24dp"
            tools:ignore="VectorDrawableCompat" />


    </com.mapbox.mapboxsdk.maps.MapView>

</FrameLayout>